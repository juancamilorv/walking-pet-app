<!--Dogs Walkers-->
<div class="card-container col-md">
  <div class="cards-walkers album py-5 container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-5 g-3 border-info">
      <% @petwalkers.each do |petwalker| %>
        <div class="card-walker border-primary card mx-2 px-3 col">
          <% if petwalker.photo.attached? %>
            <%= cl_image_tag petwalker.photo.key, class: 'card-img-top'%>
          <% else %>
            <%= image_tag "petwalker.png", size: "auto", style: "border-radius: 5%; width: 100%", class: "card-img-top bd-placeholder-img"%>
          <% end %>

          <div class="card-body">
            <div class="card-user">
              <h5 class="card-title"></h5>
              <%= petwalker.email %>
              <p class="card-description">Description</p>
              <%= link_to 'RESERVAR', user_path(petwalker), class: 'btn btn-primary' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!--Footer-->
<div class="footer">
  <p>The walking pet team</p>
</div>
