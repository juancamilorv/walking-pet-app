<h1>This is the show view of pet</h1>

<div class="row">
  <div class="card" style="width: 18rem;">
    <% if @pet.photo.attached? %>
      <%= cl_image_tag @pet.photo.key, class: "card-img-top" %>
    <% else %>
      <i class="fa-solid fa-paw card-img-top"></i>
    <% end %>

    <div class="card-body">
      <h4 class="card-title"><%= @pet.name %></h4>
      <h6 class="card-subtitle"><%= @pet.breed %></h6>
      <p class="card-text"><%= @pet.important_note %></p>
      <%= button_to 'Delete pet', pet_path(@pet), method: :delete, class: "btn btn-warning" %>
      <%= link_to 'Edit pet', edit_pet_path(@pet), class: 'btn btn-info' %>
      <%= link_to 'New service', new_pet_service_path(@pet), class: 'btn btn-danger' %>
    </div>
  </div>
</div>

<%= link_to 'Back', pets_path, class: 'btn btn-info' %>
